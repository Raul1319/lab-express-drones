<div>
  <h2>Update the drone</h2>

  <form action="/drones/{{propiedades._id}}/edit" method="POST">

    <label for="name">Name:</label>
    <input type="text" name="name" value="{{propiedades.name}}" />

    <label for="propellers">Propellers:</label>
    <input type="number" name="propellers" value="{{propiedades.propellers}}" />

    <label for="maxSpeed">Max Speed:</label>
    <input type="number" name="maxSpeed" value="{{propiedades.maxSpeed}}" />

    <button type="submit">Edit</button>

  </form>
</div>